{{!< default}}

{{> header}}

<div role="banner" class="site-head">
    <div class="vertical">
      <div class="cover-image" style="background-image: url({{@blog.cover}})"></div>
      <div class="inner">
        <h1 class="blog-title">{{@blog.title}}</h1>
        <p class="blog-description">{{@blog.description}}</p>
      </div>
    </div>
</div>


<div class="container" id="content" role="main">

    {{#foreach posts}}

    <article class="{{post_class}}" id="post-{{id}}">
		
		<a href="{{url}}" itemprop="url" title="{{title}}" class="post-cover">{{content words="0"}}</a>
		<div class="post-content">
			<h1 class="post-title"><a href="{{url}}" title="{{title}}">{{title}}</a></h1>
			<p class="summary post-excerpt">{{excerpt}}</p>
			<span class="post-meta">{{date format='DD/MM,YYYY'}} Â· {{#if tags}} {{#tags}} #{{name}} {{/tags}} {{/if}}</span>
		</div>
    </article>

    {{/foreach}}

    {{pagination}}

</div>
